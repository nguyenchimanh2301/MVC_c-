
@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_LayoutInvoice.cshtml";
}





<script src="~/Scripts/AngularScript/Bill.js"></script>



<div ng-app="AdminSPApp" ng-controller="BillController">
    <div ng-init="LoadCart()">
        <section class="solid_banner_area">
            <div class="container">
                <div class="solid_banner_inner">
                    <h3>KIỂM TRA THANH TOÁN</h3>
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="checkout.html">KIỂM TRA THANH TOÁN</a></li>
                    </ul>
                </div>
            </div>
        </section>
        <!--================End Categories Banner Area =================-->
        <!--================Register Area =================-->
        <section class="register_area p_100">
            <div class="container">
                <div class="register_inner">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="billing_details">
                                <h2 class="reg_title">Thông tin hóa đơn</h2>
                                <form class="billing_inner row">

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="name">Fulll Name <span>*</span></label>
                                            <input type="text" class="form-control" id="name" aria-describedby="name" placeholder="" ng-model="Khachhang_name">
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="cname">Address <span>*</span></label>
                                            <input type="text" class="form-control" id="name" aria-describedby="name" placeholder="" ng-model="diachi">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="email">Email <span>*</span></label>
                                            <input type="text" class="form-control" id="email" aria-describedby="email" ng-model="email">
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="phone">Phone <span>*</span></label>
                                            <input type="text" class="form-control" id="phone" aria-describedby="phone" ng-model="phone">
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="creat_account">
                                                <input type="checkbox" id="f-option" name="selector">
                                                <label for="f-option">Ship to a different address?</label>
                                                <div class="check"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" value="submit" class="btn subs_btn form-control" ng-click="Add()">{{btntxt}}</button>
                                </form>
                            </div>
                        </div>
              
                        <div class="col-lg-5" ng-hide="hide">
                            <div class="order_box_price">
                                <h2 class="reg_title">Đơn hàng của bạn</h2>
                                <div>
                                    <div class="payment_list" >

                                        <div class="col-md-12"> <img src="~/asset/img/home-slider/logo cosette.png" class="rounded mx-auto d-block img-fluid"> </div>
                                        <div class="price_single_cost">
                                            <h3><span class="normal_text">Tên khách hàng</span> <span>{{Khachhang_name}}</span></h3>
                                        </div>
                                        <div class="price_single_cost">
                                            <h3><span class="normal_text">Địa chỉ </span> <span>{{diachi}}</span></h3>
                                        </div>
                                        <div class="price_single_cost">
                                            <h3><span class="normal_text">email  </span> <span>{{email}}</span></h3>
                                        </div>
                                        <div class="price_single_cost">
                                            <h3><span class="normal_text">Số điện thoại </span> <span>{{phone}}</span></h3>
                                        </div>
                                        <div class="price_single_cost">
                                            <table id="table_invoice" class="table">
                                                <tr>
                                                    <td>Tên sản phẩm
                                                    <td>
                                                    <td>Số lượng</td>
                                                    <td>Tổng giá</td>
                                                </tr>
                                                <tbody>
                                                    <tr ng-repeat="item in listSP">
                                                        <td>{{item.sanpham_name}}
                                                        <td>
                                                        <td>{{item.quantity}}</td>
                                                        <td>{{item.gia * item.quantity}}</td>
                                                    </tr>
                                                </tbody>
                                            </table>

                                            <h3><span class="normal_text">Tổng thanh toán</span> <span>{{tongia}}</span></h3>
                                        </div>
                                        <div id="accordion" role="tablist" class="price_method">
                                            <div class="card">
                                                <div class="card-header" role="tab" id="headingOne">
                                                    <h5 class="mb-0">
                                                        <a data-toggle="collapse" href="#collapseOne" role="button" aria-expanded="true" aria-controls="collapseOne">
                                                            SỦ DỤNG  THẺ NGÂN HÀNG
                                                        </a>
                                                    </h5>
                                                </div>

                                                <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                                    <div class="card-body">
                                                        VND
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card">
                                                <div class="card-header" role="tab" id="headingTwo">
                                                    <h5 class="mb-0">
                                                        <a class="collapsed" data-toggle="collapse" href="#collapseTwo" role="button" aria-expanded="false" aria-controls="collapseTwo">
                                                            SỬ DỤNG VÍ ĐIỆN TỬ
                                                        </a>
                                                    </h5>
                                                </div>
                                                <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
                                                    <div class="card-body">
                                                        VND
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card">
                                                <div class="card-header" role="tab" id="headingThree">
                                                    <h5 class="mb-0">
                                                        <a class="collapsed" data-toggle="collapse" href="#collapseThree" role="button" aria-expanded="false" aria-controls="collapseThree">
                                                            THANH TOÁN TRỰC TIÊP
                                                        </a>
                                                    </h5>
                                                </div>
                                                <div id="collapseThree" class="collapse" role="tabpanel" aria-labelledby="headingThree" data-parent="#accordion">
                                                    <div class="card-body">
                                                        VND
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card">
                                                <div class="card-header" role="tab" id="headingfour">
                                                    <h5 class="mb-0">
                                                        <a class="collapsed" data-toggle="collapse" href="#collapsefour" role="button" aria-expanded="false" aria-controls="collapsefour">
                                                            paypal
                                                        </a>
                                                    </h5>
                                                </div>
                                                <div id="collapsefour" class="collapse" role="tabpanel" aria-labelledby="headingfour" data-parent="#accordion">
                                                    <div class="card-body">
                                                        VND
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
        </section>
    </div>
</div>


