
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/Scripts/AngularScript/home.js"></script>


  <div ng-init="LoadLoaiSP()"> </div>
  <div ng-init="LoadLoaiSPHot()"> </div>
<section class="our_latest_product">

    <div class="container"> 

        <div class="s_m_title">
            <h2>Sản Phẩm Khuyến Mại</h2>
                  <div ng-repeat="lsp in ListLSP">
                    <a class="nav-link" href="/Product/ListProduct/?MaLSP={{lsp.Loaisp_id}}">{{lsp.Loaisp_name}}</a>
                    </div>
        </div>
        <div class="row">
            <div class="col-lg-3 l_product_item" ng-repeat="item in listLoaiSP |filter : search">
                <div class="l_p_img">
                    <a href="/Product/Product_Detail/?MaSP={{item.sanpham_id}}">
                        <img src=/{{item.picture}} alt="" class="item_img">
                    </a>
                    <div class="l_p_text">
                        <ul>
                            <li class="p_icon"><a href="#"><i class="icon_piechart"></i></a></li>
                            <li><a class="add_cart_btn" href="#" ng-click="addToCart(item)">Thêm Giỏ</a></li>
                            <li class="p_icon"><a href="#"><i class="icon_heart_alt"></i></a></li>
                        </ul>
                        <h4>{{item.sanpham_name}}</h4>
                        <h5><del>$45.50</del>{{item.gia}}</h5>
                    </div>
                </div>
            </div>
        </div>


        <div class="s_m_title">
            <h2>Sản Phẩm HOT</h2>
        </div>
        <div class="row">
            <div class="col-md-3 l_product_item" ng-repeat="item in listLoaiSPH| filter : search | limitTo : 8">
                <div class="l_p_img">
                    <a href="/Detail/DetailPage/?MaSP={{item.sanpham_id}}">
                        <img src=/{{item.picture}} alt="" class="item_img">
                    </a>
                    <div class="l_p_text">
                        <ul>
                            <li class="p_icon"><a href="#"><i class="icon_piechart"></i></a></li>
                            <li><a class="add_cart_btn" href="#" ng-click="addToCart(item)">Thêm Giỏ</a></li>
                            <li class="p_icon"><a href="#"><i class="icon_heart_alt"></i></a></li>
                        </ul>
                        <h4>{{item.sanpham_name}}</h4>
                        <h5><del></del>{{item.gia}}</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>





